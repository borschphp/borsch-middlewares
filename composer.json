{
  "name": "borschphp/middlewares",
  "description": "A curated list of middleware for Borsch Framework",
  "license": "MIT",
  "keywords": [
    "borsch",
    "framework",
    "middleware",
    "psr-15"
  ],
  "authors": [
    {
      "name": "Alexandre DEBUSSCHERE",
      "email": "alexandre@kosmonaft.dev"
    }
  ],
  "autoload": {
    "psr-4": {
      "Borsch\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AppTest\\": "tests/"
    }
  },
  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "ext-libxml": "*",
    "ext-simplexml": "*",
    "debuss-a/problem-details": "^1.0"
  },
  "require-dev": {
    "psr/http-message": "^1||^2",
    "psr/http-factory": "^1",
    "psr/http-server-handler": "^1",
    "psr/http-server-middleware": "^1",
    "borschphp/router": "^3",
    "borschphp/psr7": "^1",
    "monolog/monolog": "^2 || ^3",
    "pestphp/pest": "^3",
    "phpstan/phpstan": "^2"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
